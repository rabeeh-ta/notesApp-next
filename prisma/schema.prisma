// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id           String   @id @default(uuid())
  title        String
  note         String
  author       String?
  addedDate    DateTime @default(now())
  modifiedDate DateTime @updatedAt
}
